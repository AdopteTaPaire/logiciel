{
  "name": "atp_electron",
  "version": "1.0.3",
  "description": "App for AdopteTaPaire",
  "keywords": [],
  "author": "AdopteTaPaire <commandes@adoptetapaire.fr>",
  "license": "ISC",
  "repository": "github:AdopteTaPaire/logiciel",
  "main": "dist/electron.js",
  "email": "commandes@adoptetapaire.fr",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "rm -rf ./dist && tsc",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron .",
    "package": "rm -rf ./build && npm run build && electron-builder --win"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "^8.13.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "electron-log": "^4.4.7",
    "electron-updater": "^5.0.1",
    "lodash": "^4.17.21",
    "puppeteer-core": "^13.5.2"
  },
  "build": {
    "appId": "fr.atp.app",
    "productName": "Adopte Ta Paire",
    "files": [
      "public/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "win": {
      "icon": "public/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        "zip"
      ]
    },
    "mac": {
      "icon": "public/icons/mac/icon.icns",
      "target": [
        "zip",
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        "deb",
        "zip"
      ],
      "category": "Utility",
      "icon": "public/icons/png/256x256.png"
    }
  }
}
